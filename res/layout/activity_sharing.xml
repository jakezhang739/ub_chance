<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sharingActivity">

    <EditText
        android:id="@+id/fenXiangShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:hint="说说分享心得..."
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textMultiLine"/>

    <RelativeLayout
        android:id="@+id/shareLink"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/fenXiangShare"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary" >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sp"
            android:id="@+id/fenTou"
            />

        <TextView
            android:id="@+id/UserNameAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fenTou"
            android:textSize="20sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/UserNameAt"
            android:layout_toEndOf="@+id/fenTou"
            android:text="TextView" />
    </RelativeLayout>
</RelativeLayout>